# Not used, but few useful things i used in my project

WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "search"

    GridLayout:
        cols:1

        GridLayout:
            cols:2

            Label:
                text: "Szukaj Filmu"

            TextInput:
                id: searchbar
                text: ""
                multiline: False

        Button:
            text: "Szukaj!"
            disabled: True if searchbar.text=='' else False
            on_release:
                app.root.current = "results" if searchbar  else search
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "results"

    Button:
        text: "Wróć"
        on_release:
            app.root.current = "search"
            root.manager.transition.direction = "right"